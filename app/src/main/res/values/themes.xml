<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/FabStyle</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:actionButtonStyle">@style/ActionBarStyle</item>
        <item name="android:background">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="FabStyle" parent="Widget.Design.FloatingActionButton" >
        <item name="shapeAppearanceOverlay">@style/FabCornerRadius</item>
    </style>

    <style name="FabCornerRadius" parent="FabStyle">
        <item name="cornerSize">25%</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="backgroundColor">@color/white</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="noActionBar" parent="Theme.NotesApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>